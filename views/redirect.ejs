<%- include('./helpers/header') %>
<div class="container">
    <div class="card">
        <div class="card-body">
            <h1 class="text-center"><%= name %></h2>
                <p class="fst-italic text-center">Por favor espera 3 segundos para ver el enlace.</p>
            <div class="d-flex justify-content-center mb-4">
                <div class="spinner-border" role="status">
                  <span class="visually-hidden">Loading...</span>
                </div>
            </div>
            <div class="d-grid gap-2 col-6 mx-auto mb-4">
                <button class="btn btn-primary" type="button"><a href="<%= url %>" style="color: #ffff; text-decoration: none;">Ir al enlace</a></button>
              </div>
        </div>
    </div>
</div>
<%- include('./helpers/footer') %>